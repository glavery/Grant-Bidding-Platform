# Database configuration
# For development, you can use 'localhost' or '127.0.0.1'
# For production, use your actual database host
DB_HOST=localhost

# Use a descriptive but non-revealing database name
# Avoid using the actual production database name in development
DB_NAME=your_db_name

# Create a dedicated database user with limited permissions
# Do not use 'postgres', 'root', or other superuser accounts
DB_USER=your_db_user

# Use a strong, unique password with at least 12 characters
# Include a mix of uppercase, lowercase, numbers, and special characters
# NEVER commit the actual password to version control
DB_PASSWORD=StrongPasswordExample123!

# Server configuration
# Choose an available port that doesn't conflict with other services
PORT=8000

